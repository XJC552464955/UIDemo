<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/index_btn"
            android:text="首页"
            style="@style/tab_menu"
            android:drawableTop="@drawable/tab_index_selector"
            android:checked="true" />

        <RadioButton
            android:id="@+id/find_btn"
            android:text="发现"
            style="@style/tab_menu"
            android:drawableTop="@drawable/tab_find_selector"/>

        <RadioButton
            android:id="@+id/me_btn"
            android:text="我的"
            style="@style/tab_menu"
            android:drawableTop="@drawable/tab_me_selector"/>
    </RadioGroup>

</LinearLayout>