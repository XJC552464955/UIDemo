<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MeFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#039BE5">

        <ImageView
            android:id="@+id/login_btn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/login_btn"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/coupon_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_sail"
            android:layout_below="@+id/login_btn"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:id="@+id/coupon_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_below="@+id/coupon_btn"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:id="@+id/discout_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_yh"
            android:layout_below="@+id/login_btn"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/discout_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折扣卡"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_below="@+id/coupon_btn"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/cart_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_go"
            android:layout_below="@+id/login_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"/>

        <TextView
            android:id="@+id/cart_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_below="@+id/coupon_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"  />

    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null">

    </ListView>


</LinearLayout>