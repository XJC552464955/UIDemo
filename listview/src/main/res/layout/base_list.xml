<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:src="@mipmap/boy_portrait"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="名字"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@+id/portrait"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="2020-3-17 20:41:35"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@+id/portrait"
        android:layout_below="@+id/name"
        android:gravity="bottom"/>

    <TextView
        android:id="@+id/comment_txt"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="这是一段废话，所以不要想太多！"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/portrait"
        android:layout_margin="5dp"
        android:gravity="center_vertical"/>

    <ImageView
    android:id="@+id/share"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:src="@mipmap/share2"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/comment_txt"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/comment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/comment"
        android:layout_below="@+id/comment_txt"
        android:layout_toLeftOf="@+id/share"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/support"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/upsupported"
        android:layout_below="@+id/comment_txt"
        android:layout_toLeftOf="@+id/comment"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#a3a3a3"
        android:layout_below="@+id/support"
        android:layout_marginTop="5dp"/>
</RelativeLayout>