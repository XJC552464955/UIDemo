<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <!--shape设置形状-->
        <shape>
            <!--
                solid 填充颜色
                gradient 渐变色
                corners 设置圆角
            -->
            <solid android:color="#FFC4C4C4"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>